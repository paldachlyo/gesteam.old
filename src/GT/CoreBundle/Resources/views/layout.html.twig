{# src/GT/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} GESTEAM {% endblock %}</title>

    {% block stylesheets %}
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
		<link href="/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet">
		<style>
			.table-perso,
			.table-perso > th,
			.table-perso > td {
				background-color: #b8daff;
			}
			.table-hover .table-perso:hover {
				background-color: #9fcdff;
			}

			.table-hover .table-perso:hover > td,
			.table-hover .table-perso:hover > th {
				background-color: #9fcdff;
			}
			.btn-perso {
				color: #fff;
				background-color: #007bff;
				border-color: #007bff;
			}

			.btn-perso:hover {
				color: #fff;
				background-color: #0069d9;
				border-color: #0062cc;
			}

			.btn-perso:focus, .btn-perso.focus {
				box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.5);
			}

			.btn-perso.disabled, .btn-perso:disabled {
				background-color: #007bff;
				border-color: #007bff;
			}

			.btn-perso:active, .btn-perso.active,
			.show > .btn-perso.dropdown-toggle {
				background-color: #0069d9;
				background-image: none;
				border-color: #0062cc;
			}
			.btn-outline-perso {
				color: #007bff;
				background-color: transparent;
				background-image: none;
				border-color: #007bff;
			}

			.btn-outline-perso:hover {
				color: #fff;
				background-color: #007bff;
				border-color: #007bff;
			}

			.btn-outline-perso:focus, .btn-outline-perso.focus {
				box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.5);
			}

			.btn-outline-perso.disabled, .btn-outline-perso:disabled {
				color: #007bff;
				background-color: transparent;
			}

			.btn-outline-perso:active, .btn-outline-perso.active,
			.show > .btn-outline-perso.dropdown-toggle {
				color: #fff;
				background-color: #007bff;
				border-color: #007bff;
			}
			.badge-perso {
				color: #fff;
				background-color: #007bff;
			}

			.badge-perso[href]:focus, .badge-perso[href]:hover {
				color: #fff;
				text-decoration: none;
				background-color: #0062cc;
			}
			.alert-perso {
				color: #004085;
				background-color: #cce5ff;
				border-color: #b8daff;
			}

			.alert-perso hr {
				border-top-color: #9fcdff;
			}

			.alert-perso .alert-link {
				color: #002752;
			}
			.list-group-item-perso {
				color: #004085;
				background-color: #b8daff;
			}

			a.list-group-item-perso,
			button.list-group-item-perso {
				color: #004085;
			}

			a.list-group-item-perso:focus, a.list-group-item-perso:hover,
			button.list-group-item-perso:focus,
			button.list-group-item-perso:hover {
				color: #004085;
				background-color: #9fcdff;
			}

			a.list-group-item-perso.active,
			button.list-group-item-perso.active {
				color: #fff;
				background-color: #004085;
				border-color: #004085;
			}
			.bg-perso {
				background-color: #007bff !important;
			}

			a.bg-perso:focus, a.bg-perso:hover {
				background-color: #0062cc !important;
			}
			.border-perso {
				border-color: #007bff !important;
			}
			.text-perso {
				color: #007bff !important;
			}

			a.text-perso:focus, a.text-perso:hover {
				color: #0062cc !important;
			}


		</style>
    {% endblock %}

	{% block javascripts %}
		{# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	{% endblock %}
  </head>

	<body>
		<div class="container-fluid">
			<div id="header" class="row">
				<div class="col-md-1"><h3><small>GESTEAM</small></h3></div>
				<div class="col-md-3"><h3><small>{% block nom_club_equipe %} default layout {% endblock %}</small></h3></div>
				<div class="col-md-7 text-right">
					{% block menu_user %}
						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
							
							<div class="dropdown">
								<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
								</button>
								<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
								<a class="dropdown-item" href="#">Action</a>
								<a class="dropdown-item" href="#">Another action</a>
								<a class="dropdown-item" href="#">Something else here</a>
								</div>
							</div>
							
							<div class="dropdown">
								<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
									<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
								<span class="caret"></span>
								</button>
								<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
									<li class="dropdown-header">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</li>
									<li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
									<li><a href="{{ path('fos_user_profile_show') }}">{{ 'profil'|trans() }}</a></li>
								</ul>
							</div>
						{% else %}
							<a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
						{% endif %}
					{% endblock %}
				</div>
				<div class="col-md-1"></div>
			</div>
			
			
			<div class="row">
				<div class="col-md-1"></div>
				<div id="content" class="col-md-10">
					{% block menu_contextuel %} Core Menu contextuel {% endblock %}

					{% block flashmessages %}
						{# On affiche les messages flash que définissent les contrôleurs du bundle #}
						{% for key, messages in app.session.flashbag.all() %}
							{% for message in messages %}
								<div class="alert alert-{{ key }} alert-dismissible" role="alert">
									<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
									{{ message|trans() }}
								</div>
							{% endfor %}
						{% endfor %}
					{% endblock %}

					{% block contenu %} Core Contenu de base {% endblock %}
				</div>
				<div class="col-md-1"></div>
			</div>

			<hr>

			<footer>
				{% block footer %} Core footer {% endblock %}
			</footer>
		</div>

	</body>
</html>
