{% extends "GTClubBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{ club.nom }}{% endblock %}

{% block menu_contextuel %}
	{% set vars = {'club' : club, 'cl_equipes' : 'active' } %}
	{% include 'GTClubBundle::menu_club.html.twig' with vars %}
{% endblock %}

{% block contenu %}
<div class="row">
	<div class="col text-right">
		<a href="{{ path('gt_club_equipe_creer', { 'id_club': club.id } ) }}" class="btn btn-primary btn-sm" role="button">{{ 'gt.club.equipe.btn_ajouter'|trans() }}</a>
	</div>
</div>
<table class="table table-hover">
	<thead>
		<tr>
			<th>{{ 'gt.club.equipe.colonne.equipe'|trans() }}</th>
			<th>{{ 'gt.club.equipe.colonne.email'|trans() }}</th>
			<th>{{ 'gt.club.equipe.colonne.date_creation'|trans() }}</th>
		</tr>
	</thead>
	<tbody>
	{% if equipes|length > 0 %}
		{% for equipe in equipes %}
		<tr>
			<th scope="row">{{ equipe.nom }}</th>
			<td>{{ equipe.email }}</td>
			<td>{{ equipe.dateCreation|date('d/m/Y') }}</td>
		</tr>
		{% endfor %}
	{% else %}
		<tr>
			<td colspan="4">{{ 'gt.club.equipe.colonne.no_equipe'|trans() }}</td>
		</tr>
	{% endif %}
	</tbody>
</table>

{% endblock %}

