<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">
			<div class="row">
				<div class="col-md-10"><h4>{{ club.nom }}</h4></div>
				<div class="col-md-2 text-right"><a href="{{ path('gt_equipe_creer', { 'id_club': club.id } ) }}" class="btn btn-primary btn-sm" role="button">{{ 'gt.equipe.btn.ajouter'|trans() }}</a></div>
			</div>
		</div>
	</div>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>{{ 'gt.equipe.liste.equipe'|trans() }}</th>
				<th>{{ 'gt.equipe.liste.email'|trans() }}</th>
				<th>{{ 'gt.equipe.liste.date_creation'|trans() }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{% if equipes|length > 0 %}
			{% for equipe in equipes %}
			<tr>
				<th scope="row">{{ equipe.nom }}</th>
				<td>{{ equipe.email }}</td>
				<td>{{ equipe.dateCreation|date('d/m/Y') }}</td>
				<td>
					<div class="btn-group">
						<button type="button" class="btn btn-primary btn-sm">{{ 'gt.equipe.btn.actions'|trans() }}</button>
						<button type="button" class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							<span class="caret"></span>
							<span class="sr-only">Toggle Dropdown</span>
						</button>
						<ul class="dropdown-menu">
							<li><a href="{{ path('gt_equipe_modifier', { 'id_equipe': equipe.id }) }}">{{ 'gt.equipe.action.modifier'|trans() }}</a></li>
						</ul>
					</div>	
				</td>
			</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="4">{{ 'gt.equipe.liste.no_equipe'|trans({'%club%': club.nom}) }}</td>
			</tr>
		{% endif %}
		</tbody>
	</table>	
</div>